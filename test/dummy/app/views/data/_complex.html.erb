<%= paginated_table @data, :model_label => 'product' do |t|
  t.row :title => :header, :cycle => %w(odd even) do |row|
    row.column 'name'
    row.column 'inspect', :title => 'Raw', :style => 'text-format: smallcaps'
    row.column 'expand' do |datum|
      t.link_to_expand_row('expand', datum)
    end
  end
  t.row :title => false, :hidden => true, :data_type => 'details' do |row|
    row.column 'link', :sortable => false, :span => 2 do |datum|
      link_to(datum.id.to_s, "/data/#{datum.id}")
    end
    row.column 'collapse' do |datum|
      t.link_to_collapse_row('collapse', datum)
    end
  end
end %>
